{
  "name": "api",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "nest start --watch",
    "build": "nest build",
    "start": "node dist/main",
    "lint": "eslint .",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "typecheck": "tsc --noEmit",
    "db:migrate": "typeorm-ts-node-commonjs migration:run -d src/database/ormconfig.ts",
    "db:revert": "typeorm-ts-node-commonjs migration:revert -d src/database/ormconfig.ts",
    "db:generate": "typeorm-ts-node-commonjs migration:generate -d src/database/ormconfig.ts src/database/migrations/Migration",
    "db:seed": "ts-node src/database/seed.ts",
    "generate:sdk": "nestia sdk"
  },
  "dependencies": {
    "@nestjs/common": "^10.2.6",
    "@nestjs/core": "^10.2.6",
    "@nestjs/platform-express": "^10.2.6",
    "@nestjs/config": "^3.1.1",
    "@nestjs/typeorm": "^10.0.0",
    "typeorm": "^0.3.17",
    "pg": "^8.11.3",
    "@nestjs/jwt": "^10.1.1",
    "@nestjs/passport": "^10.0.2",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "bcrypt": "^5.1.1",
    "@bull-board/express": "^5.9.1",
    "@nestjs/bullmq": "^10.0.0",
    "bullmq": "^4.12.5",
    "@nestjs/websockets": "^10.2.6",
    "@nestjs/platform-socket.io": "^10.2.6",
    "socket.io": "^4.7.2",
    "@nestjs/swagger": "^7.1.12",
    "class-validator": "^0.14.0",
    "class-transformer": "^0.5.1",
    "joi": "^17.11.0",
    "@aws-sdk/client-s3": "^3.428.0",
    "@aws-sdk/s3-request-presigner": "^3.428.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.1.18",
    "@nestjs/schematics": "^10.0.2",
    "@nestjs/testing": "^10.2.6",
    "@types/express": "^4.17.18",
    "@types/node": "^20.8.2",
    "@types/jest": "^29.5.5",
    "@types/supertest": "^2.0.14",
    "@types/bcrypt": "^5.0.0",
    "@types/passport-jwt": "^3.0.10",
    "@types/passport-local": "^1.0.4",
    "@types/joi": "^17.2.3",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "supertest": "^6.3.3",
    "@smart-task/eslint-config": "workspace:*",
    "eslint": "^8.50.0",
    "nestia": "^4.3.0"
  },
  "jest": {
    "moduleFileExtensions": ["js", "json", "ts"],
    "rootDir": "src",
    "testRegex": ".*\.spec\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": ["**/*.(t|j)s"],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}