{
  "name": "smart-task-mono",
  "version": "1.0.0",
  "private": true,
  "description": "Smart Task Management System for Distributed Teams",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev:stack": "docker-compose --env-file ./.env -f infra/docker-compose.yml up -d postgres redis minio mailhog",
    "stop:stack": "docker-compose --env-file ./.env -f infra/docker-compose.yml down",
    "dev:stack:reset": "docker-compose --env-file ./.env -f infra/docker-compose.yml down -v",
    "dev": "turbo run dev",
    "dev:api": "yarn workspace api dev",
    "dev:web": "yarn workspace web dev",
    "dev:mobile": "yarn workspace mobile dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "typecheck": "turbo run typecheck",
    "db:migrate": "yarn workspace api db:migrate",
    "db:seed": "yarn workspace api db:seed",
    "generate:sdk": "yarn workspace api generate:sdk"
  },
  "devDependencies": {
    "turbo": "^1.10.12"
  },
  "packageManager": "yarn@4.10.3+sha512.c38cafb5c7bb273f3926d04e55e1d8c9dfa7d9c3ea1f36a4868fa028b9e5f72298f0b7f401ad5eb921749eb012eb1c3bb74bf7503df3ee43fd600d14a018266f"
}
